{
  "name": "Urgent Care Clinic",
  "description": "Ontology for urgent care clinics and walk-in medical facilities",
  "version": "1.0.0",
  "entities": {
    "patient": {
      "description": "Patient visiting the clinic",
      "fields": {
        "id": {"type": "string", "required": true, "description": "Unique patient identifier"},
        "first_name": {"type": "string", "required": true, "description": "Patient first name"},
        "last_name": {"type": "string", "required": true, "description": "Patient last name"},
        "date_of_birth": {"type": "date", "required": true, "description": "Patient date of birth"},
        "phone": {"type": "string", "required": false, "description": "Primary phone number"},
        "email": {"type": "string", "required": false, "description": "Email address"},
        "insurance_provider": {"type": "string", "required": false, "description": "Insurance provider name"},
        "insurance_id": {"type": "string", "required": false, "description": "Insurance policy number"},
        "emergency_contact": {"type": "string", "required": false, "description": "Emergency contact information"},
        "created_at": {"type": "datetime", "required": true, "description": "Patient record creation timestamp"}
      }
    },
    "visit": {
      "description": "Patient visit to the clinic",
      "fields": {
        "id": {"type": "string", "required": true, "description": "Visit identifier"},
        "patient_id": {"type": "string", "required": true, "description": "Patient identifier"},
        "check_in_time": {"type": "datetime", "required": true, "description": "Check-in timestamp"},
        "check_out_time": {"type": "datetime", "required": false, "description": "Check-out timestamp"},
        "wait_time_minutes": {"type": "integer", "required": false, "description": "Time spent waiting"},
        "treatment_time_minutes": {"type": "integer", "required": false, "description": "Time spent in treatment"},
        "chief_complaint": {"type": "string", "required": true, "description": "Primary reason for visit"},
        "diagnosis": {"type": "string", "required": false, "description": "Primary diagnosis"},
        "treatment_plan": {"type": "string", "required": false, "description": "Treatment provided"},
        "provider_id": {"type": "string", "required": false, "description": "Treating provider ID"},
        "status": {"type": "string", "required": true, "description": "Visit status (in_progress, completed, cancelled)"},
        "total_cost": {"type": "float", "required": false, "description": "Total visit cost"},
        "insurance_coverage": {"type": "float", "required": false, "description": "Amount covered by insurance"}
      }
    },
    "provider": {
      "description": "Medical provider (doctor, nurse practitioner, etc.)",
      "fields": {
        "id": {"type": "string", "required": true, "description": "Provider identifier"},
        "first_name": {"type": "string", "required": true, "description": "Provider first name"},
        "last_name": {"type": "string", "required": true, "description": "Provider last name"},
        "title": {"type": "string", "required": true, "description": "Medical title (MD, NP, PA)"},
        "specialty": {"type": "string", "required": false, "description": "Medical specialty"},
        "license_number": {"type": "string", "required": true, "description": "Medical license number"},
        "active": {"type": "boolean", "required": true, "description": "Whether provider is active"},
        "created_at": {"type": "datetime", "required": true, "description": "Provider record creation timestamp"}
      }
    }
  },
  "relationships": {
    "patient_visits": {
      "from": "patient",
      "to": "visit",
      "type": "has",
      "description": "Patient has visits"
    },
    "provider_visits": {
      "from": "provider",
      "to": "visit",
      "type": "treats",
      "description": "Provider treats visits"
    }
  },
  "kpis": {
    "average_wait_time": {
      "name": "Average Wait Time",
      "description": "Average time patients wait before being seen",
      "formula": "sum(wait_time_minutes) / count(visits)",
      "unit": "minutes",
      "target": 30.0
    },
    "patient_volume": {
      "name": "Daily Patient Volume",
      "description": "Number of patients seen per day",
      "formula": "count(visits) where date(visit_date) = today",
      "unit": "count",
      "target": 50.0
    },
    "revenue_per_visit": {
      "name": "Revenue Per Visit",
      "description": "Average revenue generated per visit",
      "formula": "sum(total_cost) / count(visits)",
      "unit": "currency",
      "target": 150.0
    },
    "provider_utilization": {
      "name": "Provider Utilization Rate",
      "description": "Percentage of time providers are seeing patients",
      "formula": "sum(treatment_time) / sum(shift_time) * 100",
      "unit": "percentage",
      "target": 80.0
    }
  },
  "alert_rules": {
    "long_wait_time": {
      "name": "Long Wait Time Alert",
      "description": "Alert when average wait time exceeds threshold",
      "kpi": "average_wait_time",
      "condition": "> 45 minutes",
      "severity": "high"
    },
    "low_patient_volume": {
      "name": "Low Patient Volume Alert",
      "description": "Alert when daily patient volume is below target",
      "kpi": "patient_volume",
      "condition": "< 30",
      "severity": "medium"
    },
    "high_no_show_rate": {
      "name": "High No-Show Rate Alert",
      "description": "Alert when no-show rate exceeds threshold",
      "kpi": "no_show_rate",
      "condition": "> 20%",
      "severity": "medium"
    }
  }
}

